{
  "name": "hello-fhevm-example",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "hardhat compile",
    "deploy:add": "hardhat run scripts/deploy-fheadd.js --network sepolia",
    "deploy:counter": "hardhat run scripts/deploy-counter.js --network sepolia", 
    "deploy:voting": "hardhat run scripts/deploy-voting.js --network sepolia",
    "deploy:secretgame": "hardhat run scripts/deploy-secretgame.js --network sepolia",
    "deploy:token": "hardhat run scripts/deploy-token.js --network sepolia",
    "deploy:optimized": "hardhat run scripts/deploy-optimized.js --network sepolia",
    "deploy:all": "hardhat run scripts/deploy-all.js --network sepolia",
    "verify:all": "hardhat run scripts/verify-all.js --network sepolia",
    "addresses": "node scripts/update-addresses.js",
    "addresses:update": "node scripts/update-addresses.js update",
    "clean": "hardhat clean"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@zama-fhe/oracle-solidity": "^0.1.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.2"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.10"
  }
}

